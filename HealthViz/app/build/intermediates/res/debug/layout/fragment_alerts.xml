<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentAlerts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/alertsSection_button"
        style="@style/SectionButton"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="2dp"
        android:text="Allergies, Adverse Reactions, Alerts"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_alerts_label"
        style="?android:listSeparatorTextViewStyle"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/patient_alerts_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:stretchColumns="*" >

        <TableRow>
            <TextView
                android:text="@string/substance_label"
                android:textStyle="bold"/>
            <TextView
                android:text="@string/reaction_label"
                android:textStyle="bold"/>
            <TextView
                android:text="@string/severity_label"
                android:textStyle="bold"/>
        </TableRow>

    </TableLayout>
</LinearLayout><!-- From: file:/C:/Users/John/AndroidStudioProjects/HealthViz/app/src/main/res/layout/fragment_alerts.xml -->