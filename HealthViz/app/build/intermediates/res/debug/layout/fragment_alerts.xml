<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentAlerts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/alertsSection_button"
        style="@style/SectionButton"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="2dp"
        android:text="Allergies, Adverse Reactions, Alerts"
        />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/patient_alerts_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/patient_alerts_label"
                style="?android:listSeparatorTextViewStyle"
                android:layout_span="2" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_name_label" />
            <TextView
                android:id="@+id/patient_name"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_gender_label" />
            <TextView
                android:id="@+id/patient_gender"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_birthDate_label" />
            <TextView
                android:id="@+id/patient_birthDate"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_address_label" />
            <TextView
                android:id="@+id/patient_streetAddress"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_city_label" />
            <TextView
                android:id="@+id/patient_city"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_state_label" />
            <TextView
                android:id="@+id/patient_state"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_country_label" />
            <TextView
                android:id="@+id/patient_country"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/patient_postalCode_label" />
            <TextView
                android:id="@+id/patient_postalCode"
                android:gravity="start"
                android:padding="3dp" />
        </TableRow>
    </TableLayout>
</LinearLayout><!-- From: file:/C:/Users/John/AndroidStudioProjects/HealthViz/app/src/main/res/layout/fragment_alerts.xml -->