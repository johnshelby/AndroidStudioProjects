<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shelby.android.healthviz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.shelby.android.healthviz.PatientListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shelby.android.healthviz.PatientActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.shelby.android.healthviz.PatientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PatientListActivity" />
        </activity>
        <activity
            android:name="com.shelby.android.healthviz.PatientPagerActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.shelby.android.healthviz.PatientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PatientListActivity" />
        </activity>
    </application>

</manifest>